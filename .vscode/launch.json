    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "mssql test suite",
            "program": "${workspaceFolder}\\node_modules\\vows\\bin\\vows",
            "args": [
                "--spec",
                "${workspaceFolder}\\test\\mssql-test.js", // Change to *-test.js to launch all tests.
            ],
            //"stopOnEntry": true,
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "skipFiles": [
                "<node_internals>/**"
            ]
        }
    ]
}
